{
  "name": "npm-dependancy-graph",
  "displayName": "npm dependancy graph",
  "description": "Visualize the dependancy graph of your project with a click of a button, explore vulnerabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "npm-dependancy-graph.full-graph",
        "title": "Visualize Full NPM Dependency Graph",
        "category": "NPM Dependency Graph",
        "icon": {
          "light": "media/light.png",
          "dark": "media/dark.png"
        }
      },
      {
        "command": "npm-dependancy-graph.expandable-tree",
        "title": "Visualize Expandable NPM Dependency Tree",
        "category": "NPM Dependency Graph",
        "icon": {
          "light": "media/light.png",
          "dark": "media/dark.png"
        }
      }
    ],
    "menus": {
      "editor/title":[
        {
          "command": "npm-dependancy-graph.full-graph",
          "when": "resourceFilename == package-lock.json"
        },
        {
          "command": "npm-dependancy-graph.expandable-tree",
          "when": "resourceFilename == package-lock.json"
        }
      ],
      "editor/context":[
        {
          "command": "npm-dependancy-graph.full-graph",
          "when": "resourceFilename == package-lock.json"
        },
        
        {
          "command": "npm-dependancy-graph.expandable-tree",
          "when": "resourceFilename == package-lock.json"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "force-graph": "^1.43.0",
    "npm": "^9.5.0"
  }
}
